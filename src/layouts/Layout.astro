    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Studio di yoga e discipline olistiche online. Tutto questo in live ogni settimana con i nostri insegnanti"
    />
    <meta name="author" content="Mauro Andreoli" />
    <meta
      name="keywords"
      content="matcha studio, matcha studio yoga, matcha yoga, matcha yoga live, yoga, lezioni di yoga, lezioni yoga, corso yoga, lezione yoga, lezioni di yoga, yoga lezioni, studio yoga, yoga corsi, yoga online, yoga live, meditazione online, insegnante yoga online, meditazione online, corso yoga online, corso meditazione online, yoga per principianti"
