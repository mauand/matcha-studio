---
import "@fontsource/dm-sans/400.css";
import "@fontsource/dm-sans/700.css";
import "@fontsource/montserrat/900.css";
import "@fontsource/montserrat/700.css";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

